<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/search_bg"
    card_view:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_bs"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="308dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/name_bs"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name_bs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_bs"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/bank_sampah"
            android:textColor="@color/I800"
            android:textSize="14sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc_bs"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/bs_desc"
            android:textColor="@color/I800"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_bs"
            card_view:layout_constraintTop_toBottomOf="@+id/name_bs" />

        <TextView
            android:id="@+id/address_bs"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/bs_address"
            android:textColor="@color/I800"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_bs"
            card_view:layout_constraintTop_toBottomOf="@+id/desc_bs" />

        <TextView
            android:id="@+id/open_bs"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/bs_open"
            android:textColor="@color/I800"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_bs"
            card_view:layout_constraintTop_toBottomOf="@+id/address_bs" />

        <TextView
            android:id="@+id/phone_bs"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/worksans_medium"
            android:text="@string/bs_phone"
            android:textColor="@color/I800"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_bs"
            card_view:layout_constraintTop_toBottomOf="@+id/open_bs" />

        <Button
            android:id="@+id/buttonMsg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_msg"
            android:contentDescription="@string/bs_link_wa"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/buttonLoc"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonLoc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="180dp"
            android:background="@drawable/ic_loc"
            android:contentDescription="@string/Address"
            card_view:layout_constraintBottom_toTopOf="@+id/desc_bs"
            card_view:layout_constraintStart_toEndOf="@+id/name_bs"
            card_view:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>